<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mogreene.backend.board.repository.file.FileRepository">

    <!--첨부파일 등록-->
    <insert id="persistentFile" parameterType="fileDTO">
        INSERT INTO
            attached_file (
                file_name,
                file_original_name,
                file_path,
                board_no
            )

        VALUES
              (#{fileName},
               #{fileOriginalName},
               #{filePath},
               #{boardNo})
    </insert>

    <!--첨부파일 조회-->
    <select id="getFileList" resultType="fileDto" parameterType="Long">
        SELECT
            board_no,
            file_no,
            file_name,
            file_original_name,
            file_path,
            file_reg_date

        FROM
            attached_file

        WHERE
            board_no = #{boardNo}
        ;
    </select>

    <!--단일 첨부파일 조회-->
    <select id="getSingleFile" parameterType="Long" resultType="fileDto">
        SELECT
            *

        FROM
            attached_file

        WHERE
            file_no = #{fileNo}
        ;
    </select>
</mapper>
